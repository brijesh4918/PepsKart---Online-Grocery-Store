        app:menu="@menu/tool_menu"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >



    </androidx.appcompat.widget.Toolbar>

    <ListView
        android:id="@+id/list2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
